<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="150dp"
    android:background="@android:drawable/screen_background_light_transparent"
    android:padding="10dp">
    <LinearLayout
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:id="@+id/txtDay"
            android:layout_weight="1"
            android:layout_height="0dp"
            android:gravity="center"
            android:text="Day"
            android:textSize="20sp"
            android:textColor="@color/colorPrimary"
            android:textStyle="bold"/>
        <ImageView
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:layout_height="0dp"
            android:id="@+id/imgWeather"
            android:src="@drawable/camera"/>
    </LinearLayout>

    <RelativeLayout
        android:layout_width="0dp"
        android:layout_weight="3"
        android:layout_gravity="center"
        android:gravity="right"
        android:layout_height="wrap_content"
        android:paddingLeft="10dp"
       >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/colorPrimary"
            android:id="@+id/lblMinTemp"
            android:layout_alignParentLeft="true"
            android:text="Min Temp:"
            android:textSize="20sp"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/colorPrimary"
            android:text="55"
            android:id="@+id/txtMinTemp"
            android:layout_alignParentRight="true"
            android:textSize="20sp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#e94040"
            android:id="@+id/lblMaxTemp"
            android:layout_alignParentLeft="true"
            android:text="Max Temp:"
            android:layout_marginTop="5dp"
            android:layout_below="@id/lblMinTemp"
            android:textSize="20sp"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#e94040"
            android:text="69"
            android:id="@+id/txtMaxTemp"
            android:layout_alignParentRight="true"
            android:layout_alignBaseline="@id/lblMaxTemp"
            android:textSize="20sp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#6a9b36"
            android:id="@+id/lblHumidity"
            android:layout_alignParentLeft="true"
            android:text="Humidity:"
            android:layout_marginTop="5dp"
            android:layout_below="@id/lblMaxTemp"
            android:textSize="20sp"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="65%"
            android:textColor="#6a9b36"
            android:id="@+id/txtHumidity"
            android:layout_alignParentRight="true"
            android:layout_below="@id/txtMaxTemp"
            android:textSize="20sp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#6a9b36"
            android:id="@+id/lblRain"
            android:layout_alignParentLeft="true"
            android:text="Rain poss:"
            android:layout_marginTop="5dp"
            android:layout_below="@id/lblHumidity"
            android:textSize="20sp"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="78%"
            android:layout_alignParentRight="true"
            android:textColor="#6a9b36"
            android:layout_alignBaseline="@id/lblRain"
            android:id="@+id/txtRain"
            android:textSize="20sp"/>

    </RelativeLayout>

</LinearLayout>