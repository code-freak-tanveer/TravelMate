<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@drawable/gradient"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"

    tools:context="com.example.codefreaktanveer.travelmate.LoginActivity">

   <de.hdodenhof.circleimageview.CircleImageView
       android:layout_width="92dp"
       android:layout_height="92dp"
       android:foregroundGravity="center"
       android:src="@drawable/default_propic"
       android:layout_gravity="top|center"
       android:id="@+id/imgProfile" />

    <LinearLayout
        android:background="#598f8f8e"
        android:layout_gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingTop="64dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:paddingBottom="20dp"
        android:id="@+id/linearLayout">

        <EditText
            android:id="@+id/txtFullName"
            android:layout_width="fill_parent"
            android:layout_height="60dp"
            android:padding="5dip"
            android:textColor="#fff"
            android:textColorHint="#dbe0f4"
            android:hint="Full Name"
            android:drawableLeft="@drawable/label_red"
            android:drawablePadding="25dp"
            android:background="@drawable/text_field"
            android:layout_below="@+id/linearLayout"
            android:layout_alignParentEnd="true"
            />
        <EditText
            android:id="@+id/txtUserName"
            android:layout_width="fill_parent"
            android:layout_height="60dp"
            android:layout_marginTop="10dp"
            android:padding="5dip"
            android:textColor="#fff"
            android:textColorHint="#dbe0f4"
            android:hint="Email"
            android:drawableLeft="@drawable/user_image_with_black"
            android:drawableTint="#d5d4e6"
            android:drawablePadding="25dp"
            android:background="@drawable/text_field"
            android:layout_below="@+id/linearLayout"
            android:layout_alignParentEnd="true"
            />
        <EditText
            android:id="@+id/txtPassword"
            android:layout_width="fill_parent"
            android:layout_height="60dp"
            android:padding="5dip"
            android:textColor="#fff"
            android:textColorHint="#dbe0f4"
            android:hint="Password"
            android:drawableLeft="@drawable/key"
            android:drawableTint="#d5d4e6"
            android:drawablePadding="25dp"
            android:background="@drawable/text_field"
            android:layout_below="@+id/linearLayout"
            android:layout_alignParentEnd="true"
            android:inputType="textPassword"
            android:layout_marginTop="15dp" />
        <!--<Button-->
            <!--android:layout_width="match_parent"-->
            <!--android:layout_height="60dp"-->
            <!--android:background="@drawable/buttons"-->
            <!--android:layout_marginTop="10dp"-->
            <!--android:drawablePadding="80dp"-->
            <!--android:text="Upload"-->
            <!--android:gravity="center_vertical"-->
            <!--android:drawableTint="#ddd"-->
            <!--android:drawableLeft="@drawable/upload64"-->
            <!--android:textColor="#fff"-->
            <!--android:id="@+id/btnGetPhoto"-->
           <!--/>-->
        <Button
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:text="Create Account"
            android:background="@drawable/buttons"
            android:layout_marginTop="10dp"
            android:textColor="#fff"
            android:id="@+id/signupButton"
            android:onClick="registerUser"

            />
    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Back to sign in"
        android:layout_alignParentBottom="true"
        android:textColor="@color/text_color"
        android:textSize="22sp"
        android:onClick="navigateToSignin"
        android:layout_gravity="left|bottom" />
</FrameLayout>
