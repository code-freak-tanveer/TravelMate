<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@drawable/gradient"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"

    tools:context="com.example.codefreaktanveer.travelmate.LoginActivity">
    <LinearLayout

        android:layout_centerVertical="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:id="@+id/linearLayout">

    <EditText
        android:id="@+id/txtEmailUser"
        android:layout_width="fill_parent"
        android:layout_height="60dp"
        android:padding="5dip"
        android:textColor="#fdfdfd"
        android:textColorHint="#dbe0f4"
        android:hint="Email"
        android:drawableLeft="@drawable/user_image_with_black"
        android:drawableTint="#d5d4e6"
        android:drawablePadding="25dp"
        android:background="@drawable/text_field"
        android:layout_below="@+id/linearLayout"
        android:layout_alignParentEnd="true"
       />
    <EditText
        android:id="@+id/txtloginPassword"
        android:layout_width="fill_parent"
        android:layout_height="60dp"
        android:padding="5dip"
        android:textColor="#f5661e"
        android:textColorHint="#dbe0f4"
        android:hint="Password"
        android:drawableLeft="@drawable/key"
        android:drawableTint="#d5d4e6"
        android:drawablePadding="25dp"
        android:background="@drawable/text_field"
        android:layout_below="@+id/linearLayout"
        android:layout_alignParentEnd="true"
        android:inputType="textPassword"
        android:layout_marginTop="15dp" />
    <Button
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:text="Get Started"
        android:id="@+id/btnLogin"
        android:background="@drawable/buttons"
        android:layout_marginTop="10dp"
        android:textColor="#fff"
        android:onClick="login"
        />
    </LinearLayout>
<TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="Create Account"


   android:layout_alignParentBottom="true"
    android:textColor="@color/text_color"
    android:textSize="22sp"
    android:onClick="navigateToRegistration"
    />
</RelativeLayout>
